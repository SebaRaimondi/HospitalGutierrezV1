{% extends 'base.html.twig' %} {% block body %}
<section class="container">
    <div class="row">
        <div class="col s12">
            <h3>Configuracion</h3>
        </div>
    </div>

    <div class="divider divider-margin"></div>

    <div class="row">
        <table>
            <thead>
                <tr>
                    <th>Titulo</th>
                    <th>Email</th>
                    <th>Elementos</th>
                    <th>Mantenimiento</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><span>{{ titulo }}<span></td>
                    <td><span>{{ email }}<span></td>
                    <td><span>{{ elementos }}<span></td>
                    <td><span>{% if mantenimiento %} {{ "Activado" }} {% else %} {{ "Desactivado" }} {% endif %}<span></td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="row">
        {% for card in cards %}
        <div class="col s12 m4 card-container">
            <div class="card">
                <h4 class="card-header">
                    <small>{{ card.titulo }}</small>
                </h4>
                <div class="card-body">
                    <p class="card-text">{{ card.descripcion }}</p>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</section>
{% endblock %}